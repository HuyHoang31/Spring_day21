<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <bean id="account1"  class="pojbean.Account" scope="singleton">
        <property name="id" value="1"/>
        <property name="onwerName" value="Hoang"/>
        <property name="balance" value="21.6"/>
    </bean>
    <bean id="account2"  class="pojbean.Account" scope="prototype">
        <property name="id" value="1"/>
        <property name="onwerName" value="huy"/>
        <property name="balance" value="21.6"/>
    </bean>
</beans>